# Server Configuration
NODE_ENV=development
PORT=8000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/flowtim

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Stripe Configuration (Required for Payments)
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# For Production, use live keys:
# STRIPE_SECRET_KEY=sk_live_your_live_stripe_secret_key_here
# STRIPE_PUBLISHABLE_KEY=pk_live_your_live_stripe_publishable_key_here

# Stripe Webhook Configuration
# After setting up webhook in Stripe dashboard, add the endpoint URL
# Webhook endpoint: https://your-domain.com/api/stripe/webhook
# Required events:
# - customer.subscription.created
# - customer.subscription.updated
# - customer.subscription.deleted
# - invoice.payment_succeeded
# - invoice.payment_failed
# - checkout.session.completed

# Subscription & Billing Configuration
DEFAULT_TRIAL_DAYS=14
SUBSCRIPTION_RENEWAL_REMINDER_DAYS=7
FAILED_PAYMENT_RETRY_DAYS=3

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info